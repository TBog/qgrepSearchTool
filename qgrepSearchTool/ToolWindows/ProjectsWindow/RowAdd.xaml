<UserControl x:Class="qgrepSearch.ToolWindows.RowAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:local="clr-namespace:qgrepSearch.ToolWindows"
             mc:Ignorable="d"
             Width="Auto" Height="16" Visibility="Hidden"
             d:DesignHeight="16" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary Source="/qgrepSearchTool;component/ResourceDictionary.xaml" />
    </UserControl.Resources>
    <Grid Name="AddGrid" MouseEnter="AddGrid_MouseEnter" MouseLeave="AddGrid_MouseLeave" MouseDown="AddGrid_MouseDown" Background="{DynamicResource BackgroundColor}" >
        <Button Name="AddButton" Style="{StaticResource IconButton}" FontSize="17" Margin="0,-3,0,0" Content="+" Click="AddButton_Click" />
    </Grid>
</UserControl>
